module YUV422_to_444	(		YUV 422 Input
							iYCbCr,
								YUV	444 Output
							oY,
							oCb,
							oCr,
								Control Signals
							iX,
							iCLK,
							iRST_N	);
	YUV 422 Input
input	[150]	iYCbCr;
	YUV	444 Output
output	[70]	oY;
output	[70]	oCb;
output	[70]	oCr;
	Control Signals
input	[90]	iX;
input			iCLK;
input			iRST_N;
	Internal Registers
reg		[70]	mY;
reg		[70]	mCb;
reg		[70]	mCr;

assign	oY	=	mY;
assign	oCb	=	mCb;
assign	oCr	=	mCr;

always@(posedge iCLK or negedge iRST_N)
begin
	if(!iRST_N)
	begin
		mY	=	0;
		mCb	=	0;
		mCr	=	0;
	end
	else
	begin
		if(iX[0])
		{mY,mCr}	=	iYCbCr;
		else
		{mY,mCb}	=	iYCbCr;
	end
end

endmodule